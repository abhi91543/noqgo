rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function adminId() {
      return 'v9coxkgZAHWuNLHTGjLJLweDSC12'; // Your Admin UID
    }

    match /Menu/{itemId} {
      allow read: if true;
      allow write: if request.auth.uid == request.resource.data.ownerId || request.auth.uid == adminId();
    }

    match /users/{userId} {
      allow read: if request.auth.uid == adminId() || request.auth.uid == userId;
      allow update: if request.auth.uid == adminId() || request.auth.uid == userId;
      allow create: if request.auth.uid == userId;
    }

    match /Orders/{orderId} {
      allow create: if request.auth.uid != null;
      allow read, update: if request.auth.uid == adminId() || request.auth.uid == resource.data.ownerId || request.auth.uid == resource.data.customerId;
    }

    // --- NEW RULE ADDED HERE ---
    match /Locations/{locationId} {
      // A user can create a location if they are the owner.
      allow create: if request.auth.uid == request.resource.data.ownerId;
      // A user can read, update, or delete a location only if they are the owner.
      allow read, update, delete: if request.auth.uid == resource.data.ownerId;
    }
  }
}