rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'owner';
    }

    match /Menu/{itemId} {
      allow read: if true;
      allow write: if isOwner();
    }

    match /users/{userId} {
      // FIX: Allow any logged-in user to read profile data.
      // This is needed for customers to get the venue's location for geo-fencing.
      allow read: if request.auth != null;
      
      // Only the user or an owner can update a profile.
      allow update: if request.auth.uid == userId || isOwner();
      allow create: if request.auth.uid == userId;
    }

    match /Orders/{orderId} {
      allow create: if request.auth.uid != null;
      allow read, update: if isOwner() || request.auth.uid == resource.data.customerId;
    }

    match /Locations/{locationId} {
      allow read, write, delete: if isOwner();
    }
  }
}